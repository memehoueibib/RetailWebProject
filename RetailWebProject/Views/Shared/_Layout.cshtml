<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Retail Web Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RetailWebProject.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-modern">
        <div class="container-fluid">
            <a class="navbar-brand navbar-brand-modern" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shop"></i>Retail Web Store
            </a>
            
            <button class="navbar-toggler navbar-toggler-modern" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-link-modern" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-heart"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-modern" asp-area="" asp-controller="Products" asp-action="Index">
                            <i class="bi bi-box-seam"></i>Products
                            <!-- Badge optionnel pour les notifications -->
                            <!-- <span class="nav-badge">5</span> -->
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-modern" asp-area="" asp-controller="Customers" asp-action="Index">
                            <i class="bi bi-people-fill"></i>Customers
                        </a>
                    </li>
                    <!-- Boutons d'action optionnels -->
                    <li class="nav-item ms-2">
                        <a class="nav-link nav-link-modern" href="Customers/Create" style="background: rgba(255,215,0,0.2); border: 1px solid #ffd700;">
                            <i class="bi bi-plus-circle"></i>Add Product
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    </header>

 
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="footer-modern">
    <div class="container footer-content">
        <div class="row py-5">
            <!-- Brand Section -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="footer-brand">
                    <i class="bi bi-shop me-2"></i>Retail Web Store
                </div>
                <p class="mb-3" style="opacity: 0.9; line-height: 1.6;">
                    Transforming the future of retail with innovative technology solutions. 
                    Experience shopping like never before in 2025.
                </p>
                <div class="social-icons">
                    <a href="#" title="Facebook">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="#" title="Twitter">
                        <i class="bi bi-twitter"></i>
                    </a>
                    <a href="#" title="Instagram">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a href="#" title="LinkedIn">
                        <i class="bi bi-linkedin"></i>
                    </a>
                </div>
            </div>
            
            <!-- Quick Links -->
            <div class="col-lg-2 col-md-6 mb-4">
                <div class="footer-links">
                    <h6 style="color: #ffd700; font-weight: 600; margin-bottom: 1rem;">
                        <i class="bi bi-link-45deg me-2"></i>Quick Links
                    </h6>
                    <div class="d-flex flex-column">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="mb-2">
                            <i class="bi bi-house me-2"></i>Home
                        </a>
                        <a asp-area="" asp-controller="Products" asp-action="Index" class="mb-2">
                            <i class="bi bi-box me-2"></i>Products
                        </a>
                        <a asp-area="" asp-controller="Customers" asp-action="Index" class="mb-2">
                            <i class="bi bi-people me-2"></i>Customers
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-shield-check me-2"></i>Privacy
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Services -->
            <div class="col-lg-2 col-md-6 mb-4">
                <div class="footer-links">
                    <h6 style="color: #ffd700; font-weight: 600; margin-bottom: 1rem;">
                        <i class="bi bi-gear me-2"></i>Services
                    </h6>
                    <div class="d-flex flex-column">
                        <a href="#" class="mb-2">
                            <i class="bi bi-cart me-2"></i>E-commerce
                        </a>
                        <a href="#" class="mb-2">
                            <i class="bi bi-headset me-2"></i>Support
                        </a>
                        <a href="#" class="mb-2">
                            <i class="bi bi-truck me-2"></i>Delivery
                        </a>
                        <a href="#">
                            <i class="bi bi-arrow-return-left me-2"></i>Returns
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Contact Info -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="contact-info">
                    <h6 style="color: #ffd700; margin-bottom: 1rem;">
                        <i class="bi bi-envelope me-2"></i>Contact Us
                    </h6>
                    <div class="contact-item">
                        <i class="bi bi-geo-alt"></i>
                        <span>123 Commerce St, Business District</span>
                    </div>
                    <div class="contact-item">
                        <i class="bi bi-telephone"></i>
                        <span>+1 (555) 123-4567</span>
                    </div>
                    <div class="contact-item">
                        <i class="bi bi-envelope-at"></i>
                        <span>contact@retailwebstore.com</span>
                    </div>
                    <div class="contact-item">
                        <i class="bi bi-clock"></i>
                        <span>Mon-Fri: 9AM-6PM</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Bottom Footer -->
        <div class="footer-bottom">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">
                        &copy; 2025 - Retail Web Store - 
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: #ffd700;">Privacy</a>
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0 dedication-text">
                        <i class="bi bi-heart-fill me-1"></i>
                        Dedicated with respect to Professor Marcel Stephan Wagner
                    </p>
                </div>
            </div>
        </div>
    </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
       <script>
        // Effet de scroll pour la navbar
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar-modern');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
        
        // Marquer le lien actif
        document.addEventListener('DOMContentLoaded', function() {
            const currentLocation = location.pathname;
            const navLinks = document.querySelectorAll('.nav-link-modern');
            
            navLinks.forEach(link => {
                if(link.getAttribute('href') === currentLocation) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>