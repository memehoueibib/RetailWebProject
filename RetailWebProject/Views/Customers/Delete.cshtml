@model RetailWebProject.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Customer</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this customer? This action cannot be undone.
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
                    <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.FullName)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-9">
                        <a href="mailto:@Model.Email" class="text-decoration-none">
                            <i class="bi bi-envelope"></i> @Html.DisplayFor(model => model.Email)
                        </a>
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DateOfBirth)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Age)</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@Html.DisplayFor(model => model.Age) years old</span>
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="btn-group" role="group">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this customer?')">
                            <i class="bi bi-trash"></i> Delete Customer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>