@model RetailWebProject.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="bi bi-person"></i> Customer Details</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
                    <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.FullName)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-9">
                        <a href="mailto:@Model.Email" class="text-decoration-none">
                            <i class="bi bi-envelope"></i> @Html.DisplayFor(model => model.Email)
                        </a>
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DateOfBirth)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Age)</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info fs-6">@Html.DisplayFor(model => model.Age) years old</span>
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>