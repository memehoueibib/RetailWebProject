@model IEnumerable<RetailWebProject.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-box"></i> Products</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Product
    </a>
</div>

<!-- Search Form -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <label for="searchString" class="form-label">Search by Name</label>
                <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Enter product name..." />
            </div>
            <div class="col-md-4">
                <label for="category" class="form-label">Filter by Category</label>
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Enum.GetValues<ProductCategory>())
                    {
                        <option value="@category" selected="@(ViewData["CurrentCategory"]?.ToString() == category.ToString())">
                            @category
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="card-title mb-0 fw-bold">@Html.DisplayFor(modelItem => item.Name)</h6>
                        <small class="text-muted">@Html.DisplayFor(modelItem => item.Category)</small>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Price:</strong> <span class="price-display">@item.Price.ToString("C")</span>
                        </p>
                        <p class="card-text">
                            <strong>Release Date:</strong> @Html.DisplayFor(modelItem => item.ReleaseDate)
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i> No products found. 
        <a asp-action="Create" class="alert-link">Create the first product</a>.
    </div>
}